@model IEnumerable<EmployeeMVC.Models.Employee>
@{
    ViewBag.Title = "ManageEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Employee</h2>
@Styles.Render("~/Content/css")

<p>
    @Html.ActionLink("Create New", "AddEmployee", "", new { @style = "color:black;text-decoration:none;" })
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-bordered">
                    <tr>
                        <td width="100" align="center">
                            Emp SrNo
                        </td>

                        <td width="200" align="center">
                            Emp Name
                        </td>

                        <td width="200" align="center">
                            Salary
                        </td>

                        <td width="200" align="center">
                            Opration
                        </td>
                    </tr>
                    @foreach (var item in Model)
                    {
                    <tr class="tablecont1">
                        <td width="100" align="center">
                            @Html.DisplayFor(modelItem => item.EmpNo)
                        </td>
                        <td width="200" align="center">
                            @Html.DisplayFor(modelItem => item.EmpName)
                        </td>
                        <td width="200" align="center">
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                        <td width="200" align="center">

                            <a href=@Url.Action("AddEmployee", new { EmpNo = item.EmpNo })>
                                Edit
                            </a>
                            <a href=@Url.Action("RemoveEmployee", new { EmpNo = item.EmpNo })>
                                Remove
                            </a>
                        </td>
                    </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
